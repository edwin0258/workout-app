<h2 class="text-center header-text well well-sm">Log in</h2>
<div class="row well-lg" id="white-container">
  <div class="col-md-12">
    <%= form_for(resource, as: resource_name,:html => {class: "form-horizontal", role: "form" }, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <div class="control-label col-md-3">
          <%= f.label :email %>
        </div>
        <div class="col-md-9">
          <%= f.email_field :email, class: "form-control",id: "Email", autofocus: true %>
        </div>  
      </div>

      <div class="form-group">
        <div class="control-label col-md-3">
          <%= f.label :password %>
        </div>
        <div class="col-md-9">
          <%= f.password_field :password,class: "form-control",id: "Password", autocomplete: "off" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
          </div>
        </div>
      <% end -%>

      <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
        <%= f.submit "Log in", class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>
    <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
          <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
